# vim: set ft=bash:

if ! has sd; then
    {{ if eq .osid "darwin" }}
    info 'Installing sd'
    log brew update
    log brew install sd

    {{ else if or
        (eq .osid "ubuntu")
        (eq .osid "pop")
        (eq .osid "pi")
        (eq .osid "kali") }}
    if ! has rust; then
        {{ template "bootstrap/rust.tmpl" . }}
    else
        info 'Update rustup'
        log rustup update stable
    fi
    info 'Installing sd'
    log cargo +stable install sd

    {{ else }}
    error 'No installation instructions found for: sd'
    exit 1
    {{ end }}
fi
