# vim: set ft=bash:

if ! has fd; then
    {{ if eq .osid "darwin" }}
    info 'Installing fd'
    log brew update
    log brew install fd

    {{ else if regexMatch "ubuntu|pop|pi|kali" .osid }}
    if ! has rustup; then
        {{ template "bootstrap/rust.tmpl" . }}
    else
        log rustup update stable
    fi
    info 'Installing fd'
    log sudo apt update
    log sudo apt -y install build-essential
    log cargo +stable install fd-find

    {{ else }}
    error 'No installation instructions found for: fd'
    exit 1
    {{ end }}
fi
