# vim: set ft=bash:

if ! has lsd; then
    {{ if contains "darwin" .osid }}
    info 'Installing lsd'
    log brew update
    log brew install lsd

    {{ else }}
    if ! has rustup; then
        {{ template "bootstrap/rust.tmpl" . }}
    else
        log rustup update stable
    fi
    info 'Installing lsd'
    log cargo +stable install lsd

    {{ else }}
    error 'No installation instructions found for: lsd'
    exit 1
    {{ end }}
fi
