# vim: set ft=bash:

if ! has starship; then

    {{ if eq .chezmoi.os "darwin" }}
    info 'Installing starship'
    log brew update
    log brew install starship

    {{ else }}
    info 'Installing starship'
    log curl -fsSL https://starship.rs/install.sh \
        | sh -s -- -y --bin-dir ~/.local/bin

    {{ end }}
fi
