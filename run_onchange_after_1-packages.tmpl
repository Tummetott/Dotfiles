#!/usr/bin/env bash
# vim: set ft=bash:

# This script is set to re-execute under two conditions: either there's a change
# in the chezmoi.toml configuration, or the installer signals re-execution by
# updating the repeat.hash file. Including the hash values from the .scriptstate
# directory allows the script to detect changes in these critical files,
# ensuring it runs again whenever necessary to reflect any new configurations or
# installation requirements.
# {{ include ".scriptstate/chezmoi.toml.hash" }} 
# {{ include ".scriptstate/repeat.hash" }} 

source ~/.local/share/chezmoi/.script-helper
set -euo pipefail
trap on_error ERR
source ~/.config/shell/env

# Cache the sudo password for subsequent sudo commands within this script
info "Please enter your computer's password"
sudo true

{{ if eq .chezmoi.os "darwin" }}
    {{ template "bootstrap/brew-packages.tmpl" . }}
{{ end }}

{{ if and (eq .chezmoi.os "linux") (or 
        (eq .chezmoi.osRelease.id "ubuntu")
        (eq .chezmoi.osRelease.id "pop")
        (eq .chezmoi.osRelease.id "debian")
        (eq .chezmoi.osRelease.id "kali")) }}
    {{ template "bootstrap/aptitude-packages.tmpl" . }}
    {{ template "bootstrap/snap-packages.tmpl" . }}
{{ end }}

{{ if .install.flatpak }}
    {{ template "bootstrap/flatpak.tmpl" . }}
{{ end }}

{{ if .nerdfonts }}
    {{ template "bootstrap/nerdfonts.tmpl" . }}
{{ end }}

{{ if .install.zsh }}
    {{ template "bootstrap/zsh.tmpl" . }}
{{ end }}

{{ if .install.neovim }}
    {{ template "bootstrap/neovim.tmpl" . }}
{{ end }}

{{ if .install.tmux }}
    {{ template "bootstrap/tmux.tmpl" . }}
{{ end }}

{{ if .install.fzf }}
    {{ template "bootstrap/fzf.tmpl" . }}
{{ end }}

{{ if .install.bottom }}
    {{ template "bootstrap/bottom.tmpl" . }}
{{ end }}

{{ if .install.rust }}
    {{ template "bootstrap/rust.tmpl" . }}
{{ end }}

{{ if .install.conda }}
    {{ template "bootstrap/conda.tmpl" . }}
{{ end }}

{{ if .install.starship }}
    {{ template "bootstrap/starship.tmpl" . }}
{{ end }}

{{ if .install.lsd }}
    {{ template "bootstrap/lsd.tmpl" . }}
{{ end }}

{{ if .install.wezterm }}
    {{ template "bootstrap/wezterm.tmpl" . }}
{{ end }}

{{ if .install.alacritty }}
    {{ template "bootstrap/alacritty.tmpl" . }}
{{ end }}

{{ if .install.nushell }}
    {{ template "bootstrap/nushell.tmpl" . }}
{{ end }}
