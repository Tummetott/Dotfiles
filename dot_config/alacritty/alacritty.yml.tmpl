# vim: set ft=yaml:

keyboard:
  bindings:
    - { key: Key0, mods: Control, chars: "\e[48;5u" }
    - { key: Key1, mods: Control, chars: "\e[49;5u" }
    - { key: Key2, mods: Control, chars: "\e[50;5u" }
    - { key: Key3, mods: Control, chars: "\e[51;5u" }
    - { key: Key4, mods: Control, chars: "\e[52;5u" }
    - { key: Key5, mods: Control, chars: "\e[53;5u" }
    - { key: Key6, mods: Control, chars: "\e[54;5u" }
    - { key: Key7, mods: Control, chars: "\e[55;5u" }
    - { key: Key8, mods: Control, chars: "\e[56;5u" }
    - { key: Key9, mods: Control, chars: "\e[57;5u" }
    - { key: Semicolon, mods: Control, chars: "\e[59;5u" }
    - { key: Comma,     mods: Control, chars: "\e[44;5u" }
    - { key: Period,    mods: Control, chars: "\e[46;5u" }
    - { key: Slash,     mods: Control, chars: "\e[47;5u" }
    - { key: I,         mods: Control, chars: "\e[555;0~\e[105;5u" }
    - { key: M,         mods: Control, chars: "\e[555;0~\e[109;5u" }
    - { key: Return,    mods: Control, chars: "\e[13;5u" }
    - { key: Return,    mods: Shift,   chars: "\e[13;2u" }

env:
  # Set terminfo to alacritty with true color support (RBG). If this setting is ommited,
  # alacritty will check the local terminfo database and use 'alacritty' if it is
  # available, otherwise 'xterm-256color' is used.
  # TERM: "alacritty-direct"
  TERM: "alacritty"

# Window configuration
window:
  dimensions:
    columns: 135
    lines: 33

  # Blank space added around the window in pixels as margin
  padding:
    x: 10
    y: 10

  # Neither borders nor title bar
  decorations: full

scrolling:
  # Maximum number of lines in the scrollback buffer.
  history: 10000

  # Scrolling distance multiplier.
  multiplier: 3

# Font configuration
font:
  normal:
    family: "FiraCode Nerd Font Mono"
    style: Regular
  bold:
    family: "FiraCode Nerd Font Mono"
    style: Bold
  italic:
    family: "FiraCode Nerd Font Mono"
    style: Italic
  bold_italic:
    family: "FiraCode Nerd Font Mono"
    style: Bold Italic
  size: {{ .fontsize }}
